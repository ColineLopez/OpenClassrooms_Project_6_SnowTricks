{% extends 'base.html.twig' %}

{% block title %}Créer un trick!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Créer un Trick</h1>

    {{ form_start(formTrick) }}
        {{ form_row(formTrick.name) }}
        {{ form_row(formTrick.description) }}
        {{ form_row(formTrick.group_id) }}

        <button type="submit" class="btn btn-primary">Créer le trick</button>

    {{ form_end(formTrick) }}
    
{% endblock %}