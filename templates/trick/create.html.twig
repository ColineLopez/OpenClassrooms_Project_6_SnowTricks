{% extends 'base.html.twig' %}

{% block title %}Créer un trick!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <div class="login-container"> 
        <div class="login">
            <h2>Créer une nouvelle figure</h2>

            <div class="login-form">
                {{ form_start(form) }}
                    <div class="trick-input-group">
                        {{ form_row(form.name) }}
                    </div>
                    <div class="trick-textarea-group">
                        {{ form_row(form.description) }}
                    </div>
                    <div class="trick-select-group">
                        {{ form_row(form.group_id) }}
                    </div>
                    <button type="submit">Créer la figure</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    
{% endblock %}