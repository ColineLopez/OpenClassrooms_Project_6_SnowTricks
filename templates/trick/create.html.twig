{% extends 'base.html.twig' %}

{% block title %}Créer un trick!{% endblock %}

{% block body %}

    <div class="bg-custom p-4">
        <div class="trick-container"> 
            <div class="trick">
                <h2 class="h2-custom">Créer une nouvelle figure</h2>
                <div class="login-form margin-custom">
                    {{ form_start(form) }}
                        <h4>Titre de la figure</h4>
                        <div class="trick-input-group">
                            {{ form_row(form.name) }}
                        </div>
                        <div class="trick-textarea-group">
                            <h4>Description</h4>
                            {{ form_row(form.description) }}
                        </div>
                        <div class="trick-select-group">
                            <h4>Groupe de la figure :</h4>
                            {{ form_row(form.group_id) }}
                        </div>
                        <div class="d-flex justify-content-center">
                            <button class="a-custom-2 btn-form" type="submit">Créer la figure</button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
