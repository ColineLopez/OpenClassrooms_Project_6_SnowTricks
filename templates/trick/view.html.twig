{% extends 'base.html.twig' %}

{% block title %}Snowtricks - {{ trick.name }}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .banniere-trick { position:relative; height: 500px; display: flex; align-items: center; justify-content: center; text-align: center; }
    .banniere-trick::before { content: ""; background-image: url("{{ asset('images/banniere-trick.jpg') }}"); background-size: cover;  position: absolute; top: 0px; right: 0px; bottom: 0px; left: 0px; opacity: 0.75; background-position-y: center; }
    .banniere-txt-trick { position: relative; color: #333333; font-size: 3rem; line-height: 0.9; text-align: center; }
</style>

<div class="container-xl banniere-trick">
        <p class="banniere-txt-trick">
            <a href="{{ path('edit_trick', {'id': trick.id}) }}"><i class="fa-solid fa-pencil"></i></i></a>
            <a href="{{ path('delete_trick', {'id': trick.id}) }}"><i class="fa-solid fa-trash-can"></i></a>
        </p>
        <h1 class="banniere-txt-trick">{{ trick.name }}</h1>
</div>


<div class="example-wrapper">

    <p>{{ trick.description }}</p>
    
    <div class="row">
      <div class="col-md-auto">{{ trick.creationDate.format('Y-m-d H:i:s') }}</div>
      <div class="col-md-auto">{{ trick.trickGroup }}</div>
    </div>

    <hr class="my-4">

</div>
    
    
{% endblock %}