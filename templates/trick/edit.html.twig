{% extends 'base.html.twig' %}

{% block title %}SnowTricks - Modifier {{ trick.name }}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .banniere-trick { position:relative; height: 500px; display: flex; align-items: center; justify-content: center; text-align: center; }
    .banniere-trick::before { content: ""; background-image: url("{{ asset('images/banniere-trick.jpg') }}"); background-size: cover;  position: absolute; top: 0px; right: 0px; bottom: 0px; left: 0px; opacity: 0.75; background-position-y: center; }
    .banniere-txt-trick { position: relative; color: #333333; font-size: 3rem; line-height: 0.9; text-align: center; }
</style>

<div class="container-xl banniere-trick">
        <p class="banniere-txt-trick">
            <a href="{{ path('edit_trick', {'id': trick.id}) }}"><i class="fa-solid fa-pencil"></i></i></a>
            <a href="{{ path('delete_trick', {'id': trick.id}) }}"><i class="fa-solid fa-trash-can"></i></a>
        </p>
        <h1 class="banniere-txt-trick">{{ trick.name }}</h1>
</div>

<div class="example-wrapper">
    <h1>Modifier un trick</h1>

    {{ form_start(formTrick) }}

    {{ form_widget(formTrick) }}
    

    <button type="submit" class="btn btn-primary">Modifier le trick</button>

    {{ form_end(formTrick) }}

    <a href="{{ path('delete_trick', {'id': trick.id}) }}">Delete</a>
    
    {{ form_start(formMovie) }}

    {{ form_widget(formMovie) }}
    

    <button type="submit" class="btn btn-primary">Ajouter un lien vid√©o</button>

    {{ form_end(formMovie) }}

    {{ form_start(formPicture) }}

    {{ form_widget(formPicture) }}
    

    <button type="submit" class="btn btn-primary">Ajouter une photo</button>

    {{ form_end(formPicture) }}




</div>


{% endblock %}