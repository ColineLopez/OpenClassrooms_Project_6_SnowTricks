{% extends 'base.html.twig' %}

{% block title %}Page des Tricks{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .banniere { position:relative; height: 500px; display: flex; align-items: center; justify-content: center; text-align: center; }
    .banniere::before { content: ""; background-image: url("{{ asset('images/banniere.jpg') }}"); background-size: cover;  position: absolute; top: 0px; right: 0px; bottom: 0px; left: 0px; opacity: 0.75; background-position-y: center; }
    .banniere-txt { position: relative; color: #333333; font-size: 3rem; line-height: 0.9; text-align: center; }
</style>


    <div class="container-xl banniere">
        <p class="banniere-txt">Explorez l'aventure infinie des sommets enneigés avec notre collection exclusive de figures de snowboard, conçues pour défier la gravité et repousser vos limites.</p>
        <i class="fa-solid fa-circle-arrow-down"></i>
    </div>



<div class="example-wrapper">

    <div class="container">
        <div class="row">
            {% for trick in tricks %}
              <div class="col-md-auto">
                <a href="{{ path('view_trick', {'id': trick.id}) }}">{{trick.name}}</i></i></a>
                <a href="{{ path('edit_trick', {'id': trick.id}) }}"><i class="fa-solid fa-pencil"></i></i></a>
                 <a href="{{ path('delete_trick', {'id': trick.id}) }}"><i class="fa-solid fa-trash-can"></i></a>
              </div>
            {% endfor %}
            </div>
          </div>

          <i class="fa-solid fa-circle-arrow-up"></i>

</div>


{% endblock %}