{% extends 'base.html.twig' %}

{% block title %}SnowTricks{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .h-400 { height:400px; }
</style>

    <div class="container-fluid py-5 h-400" style="background-image: url({{ asset('images/banniere.jpg') }}); background-size: cover; opacity: 0.75; background-position-y: center;">
        <div class="container text-center text-white">
            <h1>SnowTricks</h1>
            <p>Explorez l'aventure infinie des sommets enneigés avec notre collection exclusive de figures de snowboard, conçues pour défier la gravité et repousser vos limites.</p>
            <a href="#tricks" class="btn btn-primary"><i class="fa-solid fa-circle-arrow-down"></i></a>
        </div>
    </div>

<div id="tricks">

    <div class="container">
        <div class="row justify-content-between">
            {% for trick in tricks %}
              <div class="col-sm-4">
                {% if trick.pictures is not empty %}
                    <img class='img-fluid img-thumbnail' src="{{ asset(trick.pictures[0].link) }}">
                {% else %}
                    <img  class='img-fluid img-thumbnail' src="{{ asset('images/banniere.jpg') }}">
                {% endif %}
                <div class="d-flex justify-content-between">   
                    <a class="mr-3" href="{{ path('view_trick', {'slug': trick.name}) }}">{{trick.name}}</i></i></a>
                    <a class="mr-3 order-md-2" href="{{ path('edit_trick', {'slug': trick.name}) }}"><i class="fa-solid fa-pencil"></i></i></a>
                    <a class="ml-auto order-md-2" href="{{ path('delete_trick', {'slug': trick.name}) }}"><i class="fa-solid fa-trash-can"></i></a>
                </div>

              </div>
            {% endfor %}
        </div>
    </div>
            <a href="#" class="btn btn-primary"><i class="fa-solid fa-circle-arrow-up"></i></a>

          

</div>


{% endblock %}