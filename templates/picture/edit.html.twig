{% extends 'base.html.twig' %}

{% block title %}Modifier une image - {{trick.name}}{% endblock %}

{% block body %}

    <div class="bg-custom p-4">
        <div class="trick-container"> 
            <div class="trick">
                <h2 class="h2-custom"><i>{{trick.name}}</i> - Modifier l'image</h2>
                <div class="login-form margin-custom">
                    {{ form_start(form) }}
                        <div class="trick-input-group">
                            <h4>Lien vers l'image</h4>
                            {{ form_row(form.link) }}
                        </div>
                        <div class="trick-input-group">
                            {{ form_row(form.banner) }}
                        </div>
                        <div class="d-flex justify-content-center">
                            <button class="a-custom-2 btn-form" type="submit">Modifier l'image</button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
