{% extends 'base.html.twig' %}

{% block title %}Supprimer une image - {{trick.name}}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>{{trick.name}} - Supprimer une image</h1>

    {{ form_start(form) }}
        {{ form_row(form.link) }}
        <a href="{{ path('app_tricks') }}" class="btn btn-secondary">Annuler</a>

        <button type="submit" class="btn btn-primary"  onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette image ?')">Supprimer</button>
    {{ form_end(form) }}
    
{% endblock %}