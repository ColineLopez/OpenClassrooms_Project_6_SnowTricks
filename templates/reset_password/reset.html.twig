{% extends 'base.html.twig' %}

{% block title %}SnowTricks - Réinitialisation mot de passe{% endblock %}

{% block body %}

    <div class="login-container">
        <div class="login">
            <h2 class="h2-custom">Réinitialiser le mot de passe</h2>
            <div class="login-form margin-custom">
                {{ form_start(resetForm) }}
                    <div class="trick-input-group">
                        {{ form_row(resetForm.plainPassword) }}
                    </div>
                    <div class="d-flex justify-content-center">
                        <button class="a-custom-2 btn-form margin-custom">Réinitialiser le mot de passe</button>
                    </div>
                {{ form_end(resetForm) }}
            </div>
        </div>
    </div>

{% endblock %}
