{% extends 'base.html.twig' %}

{% block title %}SnowTricks - Réinitialisation mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div class="login-container">
        <div class="login">
            <h2 class="h2-custom">Réinitialiser le mot de passe</h2>
            <div class="login-form margin-custom">
                {{ form_start(requestForm) }}
                    <div class="trick-input-group">
                        <label for="username">Email :</label>
                        {{ form_row(requestForm.email) }}
                    </div>
                    <div>
                        <small>
                            Entrez votre adresse email et nous vous enverrons un lien pour réinitialiser votre mot de passe.
                        </small>
                    </div>
                    <div class="d-flex justify-content-center">
                        <button class="a-custom-2 btn-form margin-custom">Envoyer le lien de réinitialisation du mot de passe</button>
                    </div>
                {{ form_end(requestForm) }}
            </div>
        </div>
    </div>
{% endblock %}
