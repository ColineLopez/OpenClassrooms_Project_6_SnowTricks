{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}SnowTricks - Se connecter{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="login-container">
        <div class="login">
            <h2 class="h2-custom">Connexion</h2>
            <form class="login-form margin-custom" action="{{ path('app_login') }}" method="post">
                <div class="trick-input-group">
                    <label for="username">Email :</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" required>
                </div>
                <div class="trick-input-group margin-custom">
                    <label for="password">Mot de passe :</label>
                    <input type="password" id="password" name="_password" required>
                </div>
                <div class="d-flex justify-content-center">
                    <input type="hidden" name="_target_path" value="/home">
                    <button class="a-custom-2 btn-form margin-custom" type="submit">Se connecter</button>
                </div>
                <div class="d-flex justify-content-center margin-custom">
                    <a class="a-custom" href="{{ path('app_forgot_password_request') }}">Mot de passe oubli√©</a>
                </div>
                <div class="d-flex justify-content-center margin-custom">
                    <a class="a-custom" href="{{ path('app_register') }}">Je n'ai pas de compte, m'inscrire</a>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
